<!DOCTYPE html>
<html lang="es">

<%- include('../partials/meta') %>

<body>
  <%- include('../partials/header') %>
  
  <main class="container__forms">
    <h1 class="uppercase text-center">Ingresa a tu cuenta</h1>
    
    <% if (typeof errors != 'undefined') { %>
    <ul>
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    
    <form class="table__form" action="/login" method="post">
      <div class="table__form__row">
        <label for="email">Correo: </label>
        <input class="admin__forms__input" type="email" id="email" name="email" value="<%= typeof values != 'undefined' ? values.email : '' %>" />
      </div>

      <div class="table__form__row">
        <label for="password">Contraseña: </label>
        <input class="admin__forms__input" type="password" id="password" name="password" />
      </div>

      <div class="flex-row justify-center align-baseline">
        <button type="submit" class="primary__btn">Ingresar</button>
        <div class="auth__checkbox">
          <input type="checkbox" id="" name="" value=""><label for=""> Recordarme</label>
        </div>
      </div>
    </form>
    
    <p class="text-center"><a href="">Olvidé mi contraseña.</a></p>
  </main>
  
  <%- include('../partials/footer') %>
</body>

</html>
