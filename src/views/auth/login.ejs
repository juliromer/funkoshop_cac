<!DOCTYPE html>
<html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="icon" href="/multimedia/branding/logoipsum-282.svg" type="image/svg+xml" />
    <link rel="stylesheet" href="/css/style.css?num=<%= Date.now() %>" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Raleway:wght@400;500;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <%- include('../partials/header') %>

    <main class="container__forms">
      <h1 class="uppercase text-center">Ingresa a tu cuenta</h1>

      <% if (typeof errors != 'undefined') { %>
      <ul>
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>

      <form class="table__form" action="/login" method="post">
        <div class="table__form__row">
          <label for="email">Correo: </label>
          <input class="admin__forms__input" type="email" id="email" name="email" value="<%= typeof values != 'undefined' ? values.email : '' %>" />
        </div>

        <div class="table__form__row">
          <label for="password">Contraseña: </label>
          <input class="admin__forms__input" type="password" id="password" name="password" />
        </div>

        <div class="flex-row justify-center align-baseline">
          <button type="submit" class="primary__btn">Ingresar</button>
          <div class="auth__checkbox">
            <input type="checkbox" id="" name="" value=""><label for=""> Recordarme</label>
          </div>
        </div>
      </form>

      <p class="text-center"><a href="">Olvidé mi contraseña.</a></p>
    </main>
    
    <%- include('../partials/footer') %>
  </body>
</html>
